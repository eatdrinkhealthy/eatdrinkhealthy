{
  "name": "eatdrinkhealthy",
  "private": true,
  "scripts": {
    "start": "meteor run --settings settings.json",
    "start-mobile": "meteor run ios-device --mobile-server localhost:3000 --settings settings.json",
    "lint-no-mg": "eslint . --ignore-pattern 'packages/miraclegrow/**'",
    "test": "./node_modules/.bin/chimp --ddp=http://localhost:3000 --path=tests",
    "test-watch": "./node_modules/.bin/chimp --ddp=http://localhost:3000 --path=tests --watch",
    "build-staging": "meteor build ~/Desktop/eatdrinkhealthy-staging-builds --server=https://eatdrinkhealthy-staging.meteorapp.com:443",
    "build-production": "meteor build ~/Desktop/eatdrinkhealthy-production-builds --server=https://www.eatdrinkhealthy.co:443",
  },
  "dependencies": {
    "meteor-node-stubs": "~0.2.0"
  },
  "devDependencies": {
    "chimp": "^0.35.0"
  }
}
