{
  "name": "eatdrinkhealthy",
  "private": true,
  "scripts": {
    "start": "meteor run --settings settings.json",
    "start-mobile": "meteor run ios-device --mobile-server localhost:3000 --settings settings.json",
    "lint-no-mg": "eslint . --ignore-pattern 'packages/miraclegrow/**'",
    "test": "npm run unit-test && npm run ee-test",
    "unit-test": "meteor test --once --port 4000 --driver-package dispatch:mocha-phantomjs",
    "unit-test-watch": "TEST_WATCH=1 meteor test --port 4000 --driver-package dispatch:mocha-phantomjs",
    "ee-test": "./node_modules/.bin/chimp --ddp=http://localhost:3000 --path=tests",
    "ee-test-watch": "./node_modules/.bin/chimp --ddp=http://localhost:3000 --path=tests --watch"
  },
  "dependencies": {
    "meteor-node-stubs": "~0.2.0"
  },
  "devDependencies": {
    "chimp": "^0.35.0"
  }
}
